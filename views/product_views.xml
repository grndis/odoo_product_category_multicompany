<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Add a new page for company-specific categories -->
            <notebook position="inside">
                <page string="Company Categories" groups="base.group_multi_company">
                    <group>
                        <field name="display_categ_name" readonly="1"/>
                        <field name="original_categ_id" readonly="1"/>
                        <field name="company_specific_categ_json" invisible="1"/>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <p>The product category shown in the General Information tab is specific to your current company. 
                        When you change it, it will only affect the category for the current company.</p>
                    </div>
                </page>
            </notebook>
        </field>
    </record>
</odoo>

