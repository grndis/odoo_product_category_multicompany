<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend the product category form view -->
    <record id="product_category_form_view_inherit" model="ir.ui.view">
        <field name="name">product.category.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="after">
                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                <field name="company_ids" widget="many2many_tags" groups="base.group_multi_company" options="{'no_create': True}"/>
            </field>
        </field>
    </record>
    
    <!-- Extend the product category tree view -->
    <record id="product_category_list_view_inherit" model="ir.ui.view">
        <field name="name">product.category.list.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view"/>
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field name="company_id" groups="base.group_multi_company"/>
            </field>
        </field>
    </record>
</odoo>

