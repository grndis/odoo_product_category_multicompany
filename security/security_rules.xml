<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Multi-company rule for product categories -->
        <record id="product_category_comp_rule" model="ir.rule">
            <field name="name">Product Category Multi-Company</field>
            <field name="model_id" ref="product.model_product_category"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|', '|', ('company_id', '=', False), ('company_id', 'in', company_ids), ('company_ids', 'in', company_id)]</field>
        </record>
    </data>
</odoo>

